= render "shared/main_page"
%body.top
  %table
    =link_to "戻る", root_path, class:"btn btn-dark", style:"margin:30px;"
    - if flash[:notice]
      .flash{style:"font-size:30px;color:blue;margin-left:100px;"}
        = flash[:notice]
    %thead
      %tr
        %th.bottom 日本語
        %th.bottom ベトナム語
        %th.bottom 発音
        %th.bottom 削除
      %tbody
      - @user.items.each_with_index do |item, i|
        %tr
          %td.bottom1= item.japanese
          %td.bottom1= item.vietnamese
          %td.bottom1= item.intonation
          %td.bottom1= link_to "削除", favorite_path(@favorites[i][:id]), method: :delete, class:"fas fa-cut",style:"color:red;"