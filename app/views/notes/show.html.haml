= render "shared/main_page"
%body.top
  .new_post 閲覧ページ
  = link_to '戻る', notes_path,class:"btn btn-dark", style:"margin:30px;"
  = link_to '編集', edit_note_path(@note),class:"btn btn-info"
  %body.grey.lighten-2
    .container
      .col.s12.m7
        .card.horizontal
          .card-image
            .fadeIn{style:"text-align:center;"}= image_tag "shutterstock_225015607.jpg",size: "350x350"
          .card-stacked
            .card-content
          = form_for(@note) do |f|
            %div{style:"font-size:30px;text-align:center;"}= f.label :タイトル
            %div.card-title{style:"font-size:30px;text-align:center;"}= @note.title
            %div{style:"font-size:30px;text-align:center;"}= f.label :ノート
            %div{style:"margin:0px 0px 100px 20px;font-size:25px;"}= @note.memo
  = link_to "削除", note_path(@note), method: :delete,class:"btn btn-danger"