.card.col-sm-6.mx-auto.mt-5
  .card-body
    %h3.mt-1.mb-3 アカウントを編集
    = form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f|
      = devise_error_messages!
      .form-group
        = f.label :email
        %br/
        = f.email_field :email, class: 'form-control'
      - if devise_mapping.confirmable? && resource.pending_reconfirmation?
        = t('.currently_waiting_confirmation_for_email', email: resource.unconfirmed_email)
      .form-group
        = f.label :password
        %i
          (#{t('.leave_blank_if_you_don_t_want_to_change_it')})
        %br/
        = f.password_field :password, autocomplete: "off", class: 'form-control'
        - if @minimum_password_length
          %br/
          %em= t('devise.shared.minimum_password_length', count: @minimum_password_length)
      .form-group
        = f.label :password_confirmation
        %br/
        = f.password_field :password_confirmation, autocomplete: "off", class: 'form-control'
      .form-group
        = f.label :current_password
        %i
          (#{t('.we_need_your_current_password_to_confirm_your_changes')})
        %br/
        = f.password_field :current_password, autocomplete: "off", class: 'form-control'
      .form-group
        = f.submit t('.update'), class: 'btn btn-primary'
    %hr/
    = button_to t('.cancel_my_account'), registration_path(resource_name), data: { confirm: t('.are_you_sure') }, method: :delete, class: 'btn btn-light btn-block border mt-1'
    %hr/
    = link_to "戻る", root_path, class: 'btn btn-secondary'
    %hr/