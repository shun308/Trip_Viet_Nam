= render "shared/main_page"
%body.top
  %table.top1
    =link_to "戻る", root_path, class:"btn btn-dark", style:"margin:30px;"
    - if flash[:notice]
      .flash{style:"font-size:30px;color:blue;margin-left:100px;"}
        = flash[:notice]
    %thead.top3
      %tr.top6
        %th.top2 日本語
        %th.top2 ベトナム語
        %th.top2 発音
        %th.top2 削除
      %tbody.top5
      - @search_conversations.each do |conversation|
        %tr.top6
          %td.top5= link_to "登録", add_conversation_path(conversation), method: :post, class:"fas fa-star", style:"color:gold;"
          / 本の詳細へのリンク
          %td.top5= conversation.japanese_conversation
          %td.top5= conversation.vietnamese_conversation
          %td.top5= conversation.intonation_conversation