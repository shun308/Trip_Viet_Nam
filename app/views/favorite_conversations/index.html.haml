= render "shared/main_page"
%body.top
  %table.top1
    .new_post お気に入り
    =link_to "戻る", root_path, class:"btn btn-dark", style:"margin:30px;"
    = render "shared/flash"
    %thead.top3
      %tr.top6
        %th.top2 日本語
        %th.top2 ベトナム語
        %th.top2 発音
        %th.top2 削除
      %tbody.top5
      - @user.conversations.each_with_index do |conversation, i|
        %tr.top6
          %td.top4= conversation.japanese_conversation
          %td.top4= conversation.vietnamese_conversation
          %td.top4= conversation.intonation_conversation
          %td.top4= link_to "削除", favorite_conversation_path(@favorite_conversations[i][:id]), method: :delete, class:"fas fa-cut",style:"color:red;"