%body
  .admin
    %header.admin__header
      .logo
        %h1 TIENG VIET
      .toolbar
        .toolbar__left
          =link_to "Favorite", users_path, class:"btn btn--primary"
      %form.form-inline.my-2.my-lg-0
        %input.form-control.mr-sm-2{"aria-label" => "Search",placeholder:"Search",type:"search"}
        =link_to "https://www.youtube.com/?gl=JP&hl=ja" do
          %button.btn.btn-outline-success.my-2.my-sm-0{type:"submit"} Search
        .toolbar__right
          =link_to"https://www.facebook.com/sharer/sharer.php?u=###url###", {onclick:"window.open(this.href,'targetWindow','toolbar=no,location=0,status=no,menubar=no,scrollbars=yes,resizable=yes,width=600,height=250'); return false",target:"_blank"}do
            .btn.fab.fa-facebook-square{style:"padding:0 10px 0 0;font-size:30px;color:#315096;"}
          =link_to"http://line.me/R/msg/text/?###url###",{onclick:"window.open(this.href,'targetWindow','toolbar=no,location=0,status=no,menubar=no,scrollbars=yes,resizable=yes,width=600,height=250'); return false",target:"_blank"}do
            .btn.fab.fa-line{style:"padding:0 10px 0 0;font-size:30px;color:#00c300;"}
          = link_to "ログアウト",destroy_user_session_path,method: :delete, class: "btn btn--primary"
    %nav.admin__nav
      %ul.menu
        %li.menu__title Content
