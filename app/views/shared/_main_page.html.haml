          %a.menu__link{:href => "#"} Channels
        %li.menu__item
          %a.menu__link{:href => "#"} Domains
        / <li class="menu__divider"></li>
        %li.menu__title Account
        %li.menu__item
          = link_to "アカウント作成",new_registration_path(current_user), class: "menu__link"
        %li.menu__item
          = link_to "アカウント編集", edit_registration_path(current_user), class: "menu__link"
